<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity"
                                             android:id="@+id/parent_layout">
    <ImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent" android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#ddffffff" android:id="@+id/linearLayout" android:paddingTop="36dp"
            android:paddingBottom="36dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="24dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/txt_time1" android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"
                    android:gravity="bottom|center_horizontal"
            />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/txt_degree1" android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:textSize="24sp"/>
            <ImageView
                    android:layout_height="56dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/img_weather1"
                    android:scaleType="fitStart"
                    android:layout_width="56dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginRight="24dp"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/txt_time2" android:layout_weight="1"
                    android:gravity="center" android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/txt_degree2" android:layout_weight="1"
                    android:gravity="center_vertical|right" android:textSize="24sp"
            />
            <ImageView
                    android:layout_width="56dp"
                    android:scaleType="fitStart"
                    android:layout_height="56dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/img_weather2"
                    android:layout_gravity="center"
                    android:layout_marginRight="24dp"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="24dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/txt_time3" android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/txt_degree3" android:layout_weight="1"
                    android:gravity="top|right"
                    android:textSize="24sp"
                    android:layout_marginRight="8dp"

                    android:layout_marginTop="16dp"/>
            <ImageView
                    android:layout_width="56dp"
                    android:scaleType="fitStart"
                    android:layout_height="56dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/img_weather3"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginRight="24dp"
            />
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:layout_width="148dp"
            android:layout_height="148dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/img_weather"
            android:scaleType="fitCenter"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="@+id/img_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="24dp"/>
    <TextView
            android:text="26Â°"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_weather"
            android:gravity="center" android:textSize="72sp"
            app:layout_constraintStart_toEndOf="@+id/img_weather"
            android:layout_marginStart="40dp" android:layout_marginLeft="40dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/img_weather"/>
    <TextView
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_weather_desc"
            android:textSize="32sp"
            android:gravity="center"
            app:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@+id/txt_weather"
            app:layout_constraintBottom_toBottomOf="@+id/img_weather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txt_weather"/>

</android.support.constraint.ConstraintLayout>