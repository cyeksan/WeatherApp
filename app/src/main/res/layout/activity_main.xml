<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity"
                                             android:id="@+id/parent_layout">
    <ImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent" android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerView" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="36dp"
            android:paddingBottom="36dp"
            android:background="#ccffffff"
    />

    <ImageView
            android:layout_width="148dp"
            android:layout_height="148dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/img_weather"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/img_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintVertical_bias="0.502" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="26Â°"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_weather"
            android:gravity="center" android:textSize="64sp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintStart_toEndOf="@+id/img_weather"
            android:layout_marginStart="24dp" android:layout_marginLeft="24dp"
            app:layout_constraintTop_toTopOf="@+id/img_weather" android:textColor="@android:color/white"/>
    <TextView
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_weather_desc"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            app:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_weather"
            app:layout_constraintStart_toStartOf="@+id/txt_weather"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_city"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"/>
    <ImageView
            android:layout_height="24dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"
            app:srcCompat="@drawable/ic_location_on_black_24dp"
            android:layout_width="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/img_weather"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>