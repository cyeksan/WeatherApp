<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingBottom="16dp">

    <TextView
            tools:text="@string/time_dummy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_time" android:layout_weight="1"
            android:textSize="@dimen/time_item_size"
            android:gravity="bottom|center_horizontal"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="@dimen/time_item_left_margin"
            android:layout_marginStart="@dimen/time_item_left_margin"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="@dimen/time_item_top_bottom_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/time_item_top_bottom_margin"/>
    <TextView
            tools:text="@string/degree_dummy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_degree" android:layout_weight="1"
            android:textSize="@dimen/degree_item_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.5"
            android:layout_marginEnd="@dimen/degree_item_margin"
            app:layout_constraintEnd_toStartOf="@+id/img_weather_icon"
            android:layout_marginRight="@dimen/degree_item_margin"/>
    <ImageView
            android:layout_width="@dimen/forecast_icon_item_size"
            android:layout_height="@dimen/forecast_icon_item_size" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/img_weather_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/degree_item_right_margin"
            app:layout_goneMarginEnd="@dimen/degree_item_right_margin"
            android:layout_marginRight="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>